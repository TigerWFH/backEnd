    "version": "0.2.0",
    "configurations": [{
            "type": "node",
            "request": "launch",
            "name": "启动程序",
            "program": "${workspaceRoot}/dist/app.js",
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}",
            "outFiles": ["${workspaceRoot}/dist/**/*"],
            "sourceMaps": true

        },
        {
            "type": "node",
            "request": "attach",
            "name": "附加到进程",
            "port": 5858,
            "address": "localhost",
            "restart": true,
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/dist/**/*"],
            "localRoot": "${workspaceRoot}",
            "remoteRoot": null,
            "timeout": 30000
        }
    ]
}